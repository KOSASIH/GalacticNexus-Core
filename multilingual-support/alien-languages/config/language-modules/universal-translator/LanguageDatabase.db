-- LanguageDatabase.db

-- Create tables for language data
CREATE TABLE Languages (
  LanguageID INTEGER PRIMARY KEY,
  Code VARCHAR(3) NOT NULL,
  Name VARCHAR(50) NOT NULL,
  Type VARCHAR(20) NOT NULL,  -- e.g. agglutinative, polysynthetic, tonal
  Script VARCHAR(20) NOT NULL  -- e.g. GalacticAlphabet, ZlorgonianGlyphs
);

CREATE TABLE Grammar (
  GrammarID INTEGER PRIMARY KEY,
  LanguageID INTEGER NOT NULL,
  WordOrder VARCHAR(10) NOT NULL,  -- e.g. SVO, SOV, VSO
  Tense VARCHAR(20) NOT NULL,  -- e.g. present, past, future
  Aspect VARCHAR(20) NOT NULL,  -- e.g. simple, progressive, perfect
  Mood VARCHAR(20) NOT NULL,  -- e.g. indicative, imperative, subjunctive
  Case VARCHAR(20) NOT NULL,  -- e.g. nominative, accusative, genitive
  FOREIGN KEY (LanguageID) REFERENCES Languages(LanguageID)
);

CREATE TABLE Vocabulary (
  VocabularyID INTEGER PRIMARY KEY,
  LanguageID INTEGER NOT NULL,
  Root VARCHAR(20) NOT NULL,  -- e.g. kor-, zha-, nir-
  Prefix VARCHAR(20) NOT NULL,  -- e.g. re-, de-, ex-
  Suffix VARCHAR(20) NOT NULL,  -- e.g. -tion, -ment, -ly
  FOREIGN KEY (LanguageID) REFERENCES Languages(LanguageID)
);

CREATE TABLE Phonology (
  PhonologyID INTEGER PRIMARY KEY,
  LanguageID INTEGER NOT NULL,
  Consonant VARCHAR(20) NOT NULL,  -- e.g. p, t, k, m, n, ŋ
  Vowel VARCHAR(20) NOT NULL,  -- e.g. i, e, a, o, u
  Diphthong VARCHAR(20) NOT NULL,  -- e.g. ai, au, oi, ou
  FOREIGN KEY (LanguageID) REFERENCES Languages(LanguageID)
);

CREATE TABLE Semantics (
  SemanticsID INTEGER PRIMARY KEY,
  LanguageID INTEGER NOT NULL,
  Entity VARCHAR(20) NOT NULL,  -- e.g. person, place, thing, idea
  Action VARCHAR(20) NOT NULL,  -- e.g. move, eat, think, feel
  Attribute VARCHAR(20) NOT NULL,  -- e.g. big, small, happy, sad
  FOREIGN KEY (LanguageID) REFERENCES Languages(LanguageID)
);

